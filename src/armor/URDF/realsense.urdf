<?xml version="1.0"?>
<robot name="fixed_realsense_camera">

    <!-- RealSense Camera Link -->
    <link name="realsense_link">
        <visual>
            <geometry>
                <box size="0.1 0.05 0.05"/> <!-- Dimensions of the camera -->
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.05 0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.1"/> <!-- Approximate mass of the camera -->
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
        </inertial>
    </link>

    <!-- Gazebo Plugin for RealSense Camera -->
    <gazebo>
        <plugin name="realsense_camera" filename="libgazebo_ros_camera.so">
            <always_on>true</always_on>
            <update_rate>30.0</update_rate>
            <camera_name>realsense_camera</camera_name>
            <image_topic_name>image_raw</image_topic_name>
            <camera_info_topic_name>camera_info</camera_info_topic_name>
            <frame_name>realsense_link</frame_name>
            <hack_baseline>0.07</hack_baseline> <!-- Stereo baseline for depth sensing -->
            <distortion_k1>0.0</distortion_k1>
            <distortion_k2>0.0</distortion_k2>
            <distortion_k3>0.0</distortion_k3>
            <distortion_t1>0.0</distortion_t1>
            <distortion_t2>0.0</distortion_t2>
            <horizontal_fov>1.047</horizontal_fov> <!-- Field of view of the camera -->
            <image_width>640</image_width>
            <image_height>480</image_height>
            <clip_near>0.1</clip_near>
            <clip_far>10.0</clip_far>
        </plugin>
    </gazebo>

</robot>
